#p15

t=int(input())
for i in range(t):
    N,X=map(int,input().split())
    k =N * X
    P = 0
    while k > 4:
        p = p + 1
        k = k - 4
    if p == 0:
        print( p ) 
    else:
        print( p + 1 )
    
